<html>
    <head></head>
    <body>
        <% if @user.nil? %>
            <p><a href="/sign-up">Sign Up</a></p>
            <p><a href="/login">Log In</a></p>
        <% else %>
            <p><a href="/logout">Log Out</a></p>
            <p><a href="/new-peep">Add new peep</a></p>
        <% end %>

        <h1>All Peeps</h1>
        <% @peeps.each do |peep| %>
            <p><%=peep.content %></p>
            <p><%=peep.time_posted %></p>
            <p><%=peep.user.name %></p>
            <p>@<%=peep.user.username %></p>
            <br>
        <% end %>
    </body>
</html>